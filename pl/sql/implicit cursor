
SET SERVEROUTPUT ON;

CREATE TABLE emptbl (
    empno NUMBER,
    ename VARCHAR2(50),
    salary NUMBER
);

INSERT INTO emptbl VALUES (1, 'Alice', 5000);
INSERT INTO emptbl VALUES (2, 'Andrew', 6000);
INSERT INTO emptbl VALUES (3, 'Bob', 5500);
COMMIT;

DECLARE
    total NUMBER;
BEGIN
    UPDATE emptbl 
    SET salary = salary * 1.1 
    WHERE ename LIKE 'A%';

    IF SQL%NOTFOUND THEN
        dbms_output.put_line('No rows updated');
    ELSE
        total := SQL%ROWCOUNT;
        dbms_output.put_line('Total ' || total || ' emptbl rows updated.');
    END IF;
END;
/
SELECT * FROM emptbl;
